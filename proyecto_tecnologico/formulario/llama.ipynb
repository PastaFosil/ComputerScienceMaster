    "# %% [pipeline_y_truncado]\n",
    "from transformers import TextGenerationPipeline\n",
    "\n",
    "MAX_INPUT_TOKENS = 1800  # recorta el prompt a este # de tokens\n",
    "MAX_NEW_TOKENS   = 80    # reduce si hay OOM (p. ej., 60)\n",
    "\n",
    "def safe_truncate(text: str, tokenizer, max_input_tokens: int = MAX_INPUT_TOKENS) -> str:\n",
    "    \"\"\"Trunca manteniendo los últimos `max_input_tokens` tokens (más relevantes).\"\"\"\n",
    "    enc = tokenizer(text, add_special_tokens=False, return_tensors=None)\n",
    "    ids = enc[\"input_ids\"]\n",
    "    if len(ids) > max_input_tokens:\n",
    "        ids = ids[-max_input_tokens:]\n",
    "    return tokenizer.decode(ids, skip_special_tokens=False)\n",
    "\n",
    "# Recomendado: menos memoria (más lento) si vas muy al límite\n",
    "try:\n",
    "    model.config.use_cache = False\n",
    "except Exception:\n",
    "    pass\n",
    "\n",
    "pipe = pipeline(\n",
    "    task=\"text-generation\",\n",
    "    model=model,\n",
    "    tokenizer=tokenizer,\n",
    "    device_map=\"auto\",\n",
    "    tokenizer_kwargs={\"truncation\": True, \"max_length\": MAX_INPUT_TOKENS + MAX_NEW_TOKENS},\n",
    ")\n",
    "\n",
    "print(\"Pipeline listo.\")\n"
   ]
